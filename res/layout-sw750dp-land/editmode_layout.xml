<?xml version="1.0" encoding="utf-8"?>
<com.aliyun.homeshell.editmode.PreviewContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/preview_container_height"
    android:paddingTop="0dp"
    android:orientation="horizontal">
    
    <FrameLayout
        android:id="@+id/preview_list_container"
        android:layout_width="@dimen/preview_container_width"
        android:layout_height="@dimen/preview_container_height"
        android:paddingLeft="10dp">

        <com.aliyun.homeshell.editmode.VerticalPreviewList
            android:id="@+id/preview_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdgeLength="5dp"
            android:requiresFadingEdge="horizontal"
            launcher:alignStartPositionHorizontal="true"/>

        <TextView android:id="@+id/add_to_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/edit_mode_add_to_folder"
            android:drawableTop="@drawable/em_add_to_folder"
            android:drawablePadding="12dp"
            android:textSize="14sp"
            android:textColor="#ffffff"
        />
        
    </FrameLayout>

    <com.aliyun.homeshell.editmode.PreviewListIndicatorView
            android:id="@+id/preview_list_indicator"
            android:layout_width="1dp"
            android:layout_height="@dimen/preview_indication_length"
            android:layout_marginTop="140dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/scorbar_bg"
        />

</com.aliyun.homeshell.editmode.PreviewContainer>
