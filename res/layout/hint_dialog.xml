<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="333.3dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_card_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/hint_dialog_logo"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/hint_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="23.7dp"
        android:textColor="#FF01CC99"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/hint_dialog_msg_1"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="9.7dp"
        android:gravity="center"
        android:textAlignment="viewStart"
        android:textColor="#808080"
        android:textSize="14sp"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/hint_dialog_btn"
        android:layout_width="224dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="23.3dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/hint_btn"
        android:textSize="16sp" />

</LinearLayout>