<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/preview_item"
     android:layout_width="@dimen/preview_cell_width"
     android:layout_height="@dimen/preview_cell_height"
     android:paddingTop="@dimen/preview_theme_item_padding_top">

    <LinearLayout
        android:layout_width="@dimen/preview_theme_image_width"
        android:layout_height="@dimen/preview_theme_image_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/preview_theme_item_margin_left"
        android:layout_marginRight="@dimen/preview_theme_item_margin_right"
        android:background="@drawable/em_preview_list_item_bg" >

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="matrix"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:id="@+id/preview_add_more_image"
            android:layout_width="@dimen/preview_theme_add_image_size"
            android:layout_height="@dimen/preview_theme_add_image_size"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:clickable="true"
            android:visibility="gone"
            android:focusable="true" />
        <TextView
            android:id="@+id/preview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/preview_theme_add_title_margin_top"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/preview_widget_item_title_textcolor"
            android:textSize="@dimen/preview_theme_title_size" />
    </LinearLayout>

     <ImageView
            android:id="@+id/preview_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/preview_theme_item_check_margin_bottom"
            android:layout_marginRight="@dimen/preview_theme_item_check_margin_right"
            android:src="@drawable/ic_corner_mark"
            android:visibility="gone"/>
</FrameLayout>