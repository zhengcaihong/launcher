<resources>
	  <style name="menuItemStyle">
	       <item name="android:layout_width">@dimen/menu_bar_height</item>
	       <item name="android:layout_height">@dimen/menu_bar_height</item>
	       <item name="android:gravity">center_horizontal</item>
	       <item name="android:layout_weight">1</item>
	       <!-- <item name="android:background">@drawable/menu_item_bg</item> -->
	       <item name="android:orientation">vertical</item>
	   </style>

    <style name="menuTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">26dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/menu_item_bg</item>
    </style>
    <style name="DropTargetButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:shadowColor">#DD000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">4.0</item>
    </style>
</resources>
