<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_window_focused="false">
        <nine-patch android:src="@drawable/hw_textfield_default" android:tint="?attr/hw_colorPrimary" />
    </item>
    <item android:state_enabled="false" android:state_window_focused="false">
        <nine-patch android:src="@drawable/hw_textfield_disabled" android:tint="?attr/hw_colorPrimaryDisabledInner" />
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <nine-patch android:src="@drawable/hw_textfield_focused" android:tint="?attr/hw_colorPrimaryDark" />
    </item>
    <item android:state_enabled="true">
        <nine-patch android:src="@drawable/hw_textfield_default" android:tint="?attr/hw_colorPrimary" />
    </item>
    <item android:state_focused="true">
        <nine-patch android:src="@drawable/hw_textfield_default" android:tint="?attr/hw_colorPrimary" />
    </item>
    <item>
        <nine-patch android:src="@drawable/hw_textfield_disabled" android:tint="?attr/hw_colorPrimaryDisabledInner" />
    </item>

</selector>