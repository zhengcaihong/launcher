<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <bitmap android:src="@drawable/hw_ic_clear_pressed" android:tint="?attr/hw_colorPrimaryDark" />
    </item>
    <item android:state_enabled="true">
        <bitmap android:src="@drawable/hw_ic_clear_normal" android:tint="?attr/hw_colorPrimary" />
    </item>
    <item android:state_enabled="false">
        <bitmap android:src="@drawable/hw_ic_clear_disabled" android:tint="?attr/hw_colorPrimaryDisabled" />
    </item>
    <item>
        <bitmap android:src="@drawable/hw_ic_clear_normal" android:tint="?attr/hw_colorPrimary" />
    </item>

</selector>