<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <bitmap android:src="@drawable/hw_ic_search_pressed" android:tint="?attr/hw_colorPrimaryDark" />
    </item>
    <item android:state_enabled="false">
        <bitmap android:src="@drawable/hw_ic_search_disabled" android:tint="?attr/hw_colorPrimaryDisabled" />
    </item>
    <item>
        <bitmap android:src="@drawable/hw_ic_search_normal" android:tint="?attr/hw_colorPrimary" />
    </item>

</selector>