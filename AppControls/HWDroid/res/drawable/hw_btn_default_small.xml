<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <nine-patch android:src="@drawable/hw_btn_default_small_pressed" android:tint="?attr/hw_colorPrimaryDark" />
    </item>
    <item android:state_enabled="true">
        <nine-patch android:src="@drawable/hw_btn_default_small_normal" android:tint="?attr/hw_colorPrimary" />
    </item>
    <item android:state_enabled="false">
        <nine-patch android:src="@drawable/hw_btn_default_small_disabled" android:tint="?attr/hw_colorPrimaryDisabledInner" />
    </item>
    <item>
        <nine-patch android:src="@drawable/hw_btn_default_small_normal" android:tint="?attr/hw_colorPrimary" />
    </item>

</selector>